<section class="user-dashboard container mt-4">
   <h1><strong>Transaction</strong> History </h1>
   <%= render 'last_login' %>

           <table class="mt-4 table table-bordered table-responsive table-striped table-hover table-sm">
                <thead>
                <tr>
                    <th scope="col">Description</th>
                    <th scope="col">Debits</th>
                    <th scope="col">Credits</th>
                    <th scope="col">Date</th>
                </tr>
                </thead>

                <tbody>
                <% if current_user.has_account? %>  
                  <% @transactions.each do |transaction| %>
                    <tr>
                        <td><%= transaction.description %></td>
                        <td><%= transaction.debits %></td>
                        <td><%= transaction.credits %></td>
                        <td><%= transaction.transaction_date.nil? ?  transaction.created_at.strftime('%d %B %Y - %I:%M%p') : transaction.transaction_date.strftime('%d %B %Y - %I:%M%p') %></td>
                    </tr>
                    <% end %>
                <% end %>
                </tbody>
            </table>
</section>